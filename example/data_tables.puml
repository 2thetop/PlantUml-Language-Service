!import Entities

package "Data Tables" {
    class Kids DATA_TABLE {
        +Id : GUID
        +Name : string
    }
    class Parents DATA_TABLE {
        +Id : GUID
        +Name : string
    }
    class Charts DATA_TABLE {
        +Id : GUID
        +DateRange : Date
    }
    class Tasks DATA_TABLE {
        +Id : GUID
        +Name : string
        +Description : string
        +Score : integer
    }
    package "Linking Tables" {
        class Parent_Child_Linker LINK_TABLE {
            +ChildId: GUID
            +ParentId : GUID
        }
