            +TaskId: GUID
            +ChartId: GUID
        }
        class Charts_Tasks_Linker LINK_TABLE {
            +TaskId: GUID
            +ChartId: GUID
        }
        class Charts_Kids_Linker LINK_TABLE {
            +ChildId: GUID
            +ChartId: GUID
        }
    }
}

